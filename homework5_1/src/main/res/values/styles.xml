<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleTableTask1">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="IconStyleTableTask1">
        <item name="android:layout_width">57dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="LinearStyleTask1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="LinearStyleTask2">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditTextStyleTask3">
        <item name="android:background">@drawable/edit_text_layout_custom</item>
        <item name="android:textColor">@color/gray</item>
        <item name="paddingStart">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="background">@drawable/edit_text_layout_custom</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ButtonStyleTask4">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_sign_in_custom</item>
    </style>

    <style name="StoriesIconStyleTask4">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="AccInfoStyleTask4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PhotosStyleTask4">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>
</resources>